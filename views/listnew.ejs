<%-include("header") -%>
<body>

    <div class="box" id="heading">
        <h1><%=listTitle%></h1>

    </div>

    <div class="box">

        <%newListItem.forEach(item1 => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name = "check" value="<%=item1._id%>" onChange="this.form.submit()">
                    <p><%=item1.name%></p>
                </div>
            </form>
        <%});%>
    
        <form class="item" action="/" method="post">
            <input type="text" name="items" placeholder="enter item" autocomplete="off">
            <button type="submit" name="list" value=<%=listTitle%>>+</button>
        </form>
    </div>

<%- include("footer") -%>